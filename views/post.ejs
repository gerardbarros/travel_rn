<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= post.hospital %></h2>
      <img class="img-fluid" src="<%= post.image%>" />
      <div class="row justify-content-between">
        
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-outline-danger fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <h3>Location:</h3>
      <p><%= post.location %></p>
      <h3>Agency Used:</h3>
      <p><%= post.agencyUsed %></p>
      <h3>EMR Used:</h3>
      <p><%= post.emrUsed %></p>
      <h3>Physician Coverage:</h3>
      <p><%= post.physicianCoverage %></p>
      <h3>Assignment Notes:</h3>
      <p><%= post.assignmentNotes %></p>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">View Assignment List</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
